{
    "name": "ESPN FF Bidder",
    "version": "0.1",
    "description": "Make sure FAAB bids are actually reflected",
    "background": {
        "page": "background.html"
    },
    "manifest_version": 2,
    "browser_action": {
        "name": "Manipulate DOM",
        "icons": [
            "icons/icon16.png"
        ],
        "default_icon": "icons/icon16.png"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "jquery-3.2.1.min.js",
                "background.js"
            ],
            "matches": [
                "http://games.espn.com/ffl/*",
                "https://games.espn.com/ffl/*"
            ]
        }
    ]
}